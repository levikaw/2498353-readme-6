{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/comment-access": ["libs/data-access/comment-access/src/index.ts"],
      "@project/common": ["libs/common/src/index.ts"],
      "@project/configuration": ["infra/configuration/src/index.ts"],
      "@project/constants": ["libs/constants/src/index.ts"],
      "@project/core": ["libs/core/src/index.ts"],
      "@project/file-access": ["libs/data-access/file-access/src/index.ts"],
      "@project/like-access": ["libs/data-access/like-access/src/index.ts"],
      "@project/notification-access": ["libs/data-access/notification-access/src/index.ts"],
      "@project/post-access": ["libs/data-access/post-access/src/index.ts"],
      "@project/prisma": ["infra/prisma/src/index.ts"],
      "@project/subscription-access": ["libs/data-access/subscription-access/src/index.ts"],
      "@project/swagger": ["infra/swagger/src/index.ts"],
      "@project/user-access": ["libs/data-access/user-access/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
